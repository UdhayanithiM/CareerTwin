{
  "manifest_version": 3,
  "name": "FortiTwin AI Assistant",
  "version": "1.0",
  "description": "Your personal AI-powered interview co-pilot.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "contextMenus",
    "declarativeNetRequest"   
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "background": {
    "service_worker": "dist/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": ["dist/content.js"]
    }
  ],
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ruleset_1",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  },
  "ai": { "text": ["proofreader", "rewriter"] }
}