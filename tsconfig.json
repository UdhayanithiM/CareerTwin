{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "NodeNext", // <-- FIX: Corrected casing
    "moduleResolution": "NodeNext", // <-- FIX: Corrected casing
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    // "types": ["node", "chart.js"], // <-- FIX: Removed this entire line. It's better to let TypeScript auto-discover types.
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "global.d.ts",
    "server.ts" // <-- ADDED: Ensure your custom server is included in the TypeScript project
  ],
  "exclude": ["node_modules", "dist"] // <-- ADDED: Exclude the compiled server output
}