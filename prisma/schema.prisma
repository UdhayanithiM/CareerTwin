generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// Defines the allowed roles in your application
enum Role {
  STUDENT
  HR
  OFFICER
  ADMIN
}

model User {
  id         String      @id @default(auto()) @map("_id") @db.ObjectId
  name       String
  email      String      @unique
  password   String
  role       Role        @default(STUDENT)
  createdAt  DateTime    @default(now())
  interviews Interview[]
}

model Interview {
  id          String     @id @default(auto()) @map("_id") @db.ObjectId
  candidateId String     @db.ObjectId
  candidate   User       @relation(fields: [candidateId], references: [id])
  status      String     // e.g., "in-progress" or "completed"
  startedAt   DateTime   @default(now())
  completedAt DateTime?
  score       Int?
  questions   Question[]
}

model Question {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  interviewId String    @db.ObjectId
  interview   Interview @relation(fields: [interviewId], references: [id])
  text        String
  answer      String?
  evaluation  String?

  // --- Fields for Code Assessments ---
  language    String?   // e.g., "javascript", "python"
  testCases   Json?     // Stores an array of {input: string, expectedOutput: string}
}